{
  "name": "ineeji-modbus-test-app",
  "version": "1.0.0",
  "author": {
    "name": "Jaebin Sa",
    "email": "jaebin@ineeji.com"
  },
  "homepage": "https://ineeji.com",
  "description": "Ineeji Modbus Test App",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build:win": "npm run copy-dist && electron-builder --win --publish always",
    "build:mac": "npm run copy-dist && electron-builder --mac --publish always",
    "build:linux": "npm run copy-dist && electron-builder --linux --publish always",
    "build:all": "npm run copy-dist && electron-builder --win --mac --linux --publish always",
    "copy-dist": "cp -r ../frontend/dist ./dist"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "jaebin-ineeji",
        "repo": "IneejiModbusTester",
        "private": true
      }
    ],
    "appId": "ineeji.modbus.test.app",
    "productName": "Ineeji Modbus Tester",
    "files": [
      "main.js",
      "dist/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon/ineeji_logo.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon/ineeji_logo.icns"
    },
    "linux": {
      "maintainer": "Jaebin Sa <jaebin@ineeji.com>",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon/ineeji_logo.png"
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  }
}
